{
  "$schema": "../docs/public/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "outputs": ["turbo", "turbo.exe"],
      "inputs": [
        "**/*.go",
        "../crates/turborepo/",
        "../crates/turbopath/",
        "../crates/turborepo-*"
      ]
    },

    "e2e": {
      "outputs": [],
      "inputs": ["**/*.go", "go.mod", "go.sum", "scripts/e2e/e2e.ts"]
    },
    "e2e-prebuilt": {
      "inputs": ["**/*.go", "go.mod", "go.sum", "scripts/e2e/e2e.ts"]
    }
  }
}
